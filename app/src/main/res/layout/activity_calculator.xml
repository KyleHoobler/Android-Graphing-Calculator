<?xml version="1.0" encoding="utf-8"?>


<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calculator">


    <android.support.constraint.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <LinearLayout
        android:id="@+id/LeftButtons"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/LighterGray"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ScrollView"
        app:layout_constraintTop_toTopOf="@+id/guideline">

        <Button

            android:id="@+id/Multiply"
            style="@style/OperationButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans"
            android:text="@string/Multiply"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:theme="@style/OperationButton"
            app:layout_constraintBottom_toTopOf="@+id/Subtract"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="@+id/guideline6" />

        <Button
            android:id="@+id/Divide"
            style="@style/OperationButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans"
            android:text="@string/Divide"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:theme="@style/OperationButton"
            app:layout_constraintBottom_toTopOf="@+id/Multiply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="@+id/guideline" />

        <Button
            android:id="@+id/Add"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans"
            android:text="@string/plus"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:theme="@style/OperationButton"
            app:layout_constraintBottom_toTopOf="@+id/guideline7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="@+id/guideline8" />

        <Button
            android:id="@+id/Subtract"
            style="@style/OperationButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans"
            android:text="@string/subtract"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:theme="@style/OperationButton"
            app:layout_constraintBottom_toTopOf="@+id/Add"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="@+id/guideline9" />

        <Button
            android:id="@+id/equals"
            style="@style/OperationButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans"
            android:text="@string/equal"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:theme="@style/OperationButton"
            app:layout_constraintBottom_toTopOf="@+id/Multiply"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/guideline5"
            app:layout_constraintTop_toTopOf="@+id/guideline" />
    </LinearLayout>

    <ScrollView

        android:id="@+id/TextScroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fadeScrollbars="false"
        android:fillViewport="true"
        android:orientation="horizontal"
        android:overScrollMode="ifContentScrolls"
        android:scrollIndicators="bottom"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbarSize="2dp"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="horizontal"
        android:verticalScrollbarPosition="defaultPosition"
        app:layout_constraintBottom_toTopOf="@+id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/DisplayNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:cursorVisible="true"
            android:ems="1"
            android:fadeScrollbars="false"
            android:focusable="false"
            android:fontFamily="@font/open_sans"
            android:gravity="bottom|right"
            android:inputType="none"
            android:maxLines="1"
            android:overScrollMode="ifContentScrolls"
            android:paddingBottom="5dp"
            android:paddingEnd="5dp"
            android:scrollHorizontally="true"
            android:selectAllOnFocus="false"
            android:textColor="@color/Black"
            android:textCursorDrawable="@null"
            android:textSize="60sp"
            android:typeface="normal"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.137" />
    </ScrollView>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/Gray"
        app:layout_constraintBottom_toTopOf="@id/ScrollView"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/TextScroll">

        <Button
            android:id="@+id/Clear"
            android:theme="@style/ClearButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans"
            android:text="@string/Clear"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintEnd_toStartOf="@+id/Back"
            app:layout_constraintStart_toStartOf="@+id/guideline3"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintVertical_bias="0.0" />

        <Button
            android:id="@+id/Back"
            android:theme="@style/ClearButtons"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans"
            android:text="@string/del"
            android:textColor="@android:color/white"
            app:layout_constraintBottom_toTopOf="@+id/guideline6"
            app:layout_constraintEnd_toStartOf="@+id/guideline5"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/guideline4"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            app:layout_constraintVertical_bias="0.0" />
    </LinearLayout>

    <HorizontalScrollView

        android:background="@color/SkyBlue"
        android:id="@+id/ScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:orientation="horizontal"
        android:scrollbarStyle="insideOverlay"
        android:scrollbars="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline5"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        app:layout_constraintVertical_bias="0.0">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/Seven"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/_7"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/Nine"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/_9"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/Eight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/_8"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/Sine"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/sin"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/cosine"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/cos"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/tangent"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/tan"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/Four"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/_4"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/Five"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/_5"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/Six"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/_6"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/NaturalLog"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/ln"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/Log"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/log"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/factorial"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/factorial"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/One"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/_1"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/Two"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/_2"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/Three"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/_3"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/PI"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/pi"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/E"
                    android:theme="@style/PrimaryButton"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/e"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/Power"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/power"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/negate"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/negate"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/Zero"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/_0"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/Decimal"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/open_sans"

                    android:text="@string/decimal"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp"
                    android:theme="@style/PrimaryButton"
                    android:visibility="visible" />

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/LeftParen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/startParen"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/RightParen"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/endParen"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

                <Button
                    android:theme="@style/PrimaryButton"
                    android:id="@+id/SquareRoot"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/open_sans"
                    android:text="@string/sqrt"
                    android:textColor="@color/offWhite"
                    android:textSize="18sp" />

            </TableRow>
        </TableLayout>
    </HorizontalScrollView>

    <android.support.constraint.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.65" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_percent="0.40"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_begin="103dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_end="180dp" />

    <android.support.constraint.Guideline
        android:id="@+id/guideline9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.50" />

    <ImageButton
        android:id="@+id/menuButton"
        style="?android:attr/actionOverflowButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/todo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
